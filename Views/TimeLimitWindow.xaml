<Window x:Class="Test_Assignment.Views.TimeLimitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Assignment.Views"
        mc:Ignorable="d"
        Title="TimeLimitWindow" Height="212" Width="332">


    <Window.CommandBindings>
        <CommandBinding Command="Close" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>


    <Grid>
        <TextBox x:Name="NewMemoryLimitTextBox" 
                   HorizontalAlignment="Center" Height="Auto" Margin="0,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" Background="#FFDFDDDD"/>
        <Button x:Name="CloseWindow" Content="Close" Command="Close" HorizontalAlignment="Left" Height="32" Margin="10,139,0,0" VerticalAlignment="Top" Width="101"/>
        <Button x:Name="SetNewMemoryLimit" Content="Set"  HorizontalAlignment="Left" Height="32" Margin="194,139,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Enter runtime limit: " HorizontalAlignment="Center" Height="Auto" Margin="0,21,0,0" VerticalAlignment="Top" Width="132"/>


    </Grid>
</Window>
